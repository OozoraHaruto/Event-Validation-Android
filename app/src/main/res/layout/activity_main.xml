<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center_vertical">
        <TextView
                android:text="@string/startup_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtMessage"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:phoneNumber="false"
                android:textAllCaps="false" android:scrollHorizontally="false" android:layout_gravity="center"
                android:gravity="center" android:layout_marginBottom="10dp"/>
        <Button
                android:text="@string/scan_qr_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnScan"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                android:onClick="requestPermission"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>